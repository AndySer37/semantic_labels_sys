<?xml version="1.0" ?>
<launch>
	<arg name="sim" default="false" />

	<group if="$(arg sim)">

	</group>
	<group unless="$(arg sim)">
		<!-- UR5 driver -->
		<include file="$(find arm_operation)/launch/ur5_real.launch">
		    <arg name="robot_ip" default="192.168.50.11" />
		    <arg name="tool_length" default="0.17"/>
		</include>
		<!-- robotiq 2-finger gripper -->
		<node name="robotiq2FGripper" pkg="robotiq_2f_gripper_control" type="Robotiq2FGripperRtuNode.py"  args="/dev/ttyGripper" required="true"/>

		<node pkg="tf" type="static_transform_publisher" name="cam_publisher" args="0.026917 -0.004526 0.084048 -0.029901 0.060039 -0.004373 0.997738  ee_link camera_link  100"/>

		<node name="gripper_control" pkg="arm_control" type="gripper_control.py" required="true"/>
	</group>

</launch>
